import java.util.*;
import java.lang.*;
import java.io.*;

class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		while(T-->0){
		    int N=sc.nextInt();
		    int X=sc.nextInt();
            System.out.println(Math.max(0, (int)Math.ceil((double)Math.max(0, N - X) / 4)));
        }
		
	}
}
